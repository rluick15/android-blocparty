<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bloc.blocparty.ui.adapters.CollectionListItemAdapter">

    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/collectionNameField"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/mini_margin"
            android:textIsSelectable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/userCountField"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collectionNameField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textIsSelectable="false"
            android:focusable="false"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="@dimen/mini_margin"
            android:layout_marginTop="@dimen/mini_margin">

            <ImageView
                android:id="@+id/image1"
                android:scaleType="fitXY"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"/>

            <ImageView
                android:id="@+id/image2"
                android:scaleType="fitXY"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="@dimen/mini_margin"
            android:layout_marginTop="@dimen/mini_margin">

            <ImageView
                android:id="@+id/image3"
                android:scaleType="fitXY"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"/>

            <ImageView
                android:id="@+id/image4"
                android:scaleType="fitXY"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
